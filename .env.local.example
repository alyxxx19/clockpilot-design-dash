# Local Development Environment Variables
# Copy this file to .env.local and update with your actual values
# NEVER commit .env.local to version control

# Base Configuration
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Database Configuration (Development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/clockpilot_dev
DATABASE_POOL_SIZE=10

# Authentication & Security (Development - Use long random strings in production)
JWT_SECRET=development-jwt-secret-key-minimum-32-characters-long-for-security
JWT_REFRESH_SECRET=development-jwt-refresh-secret-key-minimum-32-characters-long-for-security
SESSION_SECRET=development-session-secret-key-minimum-32-characters-long-for-security

# Database Seeding (Development Only)
SEED_PASSWORD_HASH=$2b$10$YourHashedPasswordHere

# Email Configuration (Development - Use MailHog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=dev@clockpilot.local

# Object Storage (Development - Can be left empty for local storage)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=
DEFAULT_OBJECT_STORAGE_BUCKET_ID=
PRIVATE_OBJECT_DIR=.private
PUBLIC_OBJECT_SEARCH_PATHS=public

# Monitoring & Analytics (Development - Usually disabled)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Feature Flags (Development)
ENABLE_GEOLOCATION=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=false

# External APIs (Development)
GOOGLE_MAPS_API_KEY=your-development-google-maps-api-key
CALENDLY_URL=https://calendly.com/clockpilot/demo

# Redis Configuration (Development)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Notification Settings (Development)
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_PUSH_ENABLED=false
WEBHOOK_SECRET=development-webhook-secret

# File Upload Settings (Development)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,csv

# Rate Limiting (Development - More lenient)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# SSL Configuration (Development - Usually disabled)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Backup Configuration (Development - Usually disabled)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=

# Performance (Development)
CACHE_TTL=300
MAX_CONNECTIONS=50
CLUSTER_WORKERS=1

# Logging (Development - More verbose)
LOG_LEVEL=debug