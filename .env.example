# Base Configuration
NODE_ENV=production
PORT=5000
BASE_URL=https://clockpilot.com

# Database Configuration
DATABASE_URL=postgresql://user:pass@host:5432/clockpilot
DATABASE_POOL_SIZE=20
PGHOST=localhost
PGPORT=5432
PGUSER=clockpilot
PGPASSWORD=
PGDATABASE=clockpilot

# Authentication & Security
JWT_SECRET=
JWT_REFRESH_SECRET=
SESSION_SECRET=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@clockpilot.com

# Object Storage (S3)
S3_BUCKET=clockpilot-uploads
S3_REGION=eu-west-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
DEFAULT_OBJECT_STORAGE_BUCKET_ID=
PRIVATE_OBJECT_DIR=
PUBLIC_OBJECT_SEARCH_PATHS=

# Monitoring & Analytics
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Feature Flags
ENABLE_GEOLOCATION=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true

# External APIs
GOOGLE_MAPS_API_KEY=
CALENDLY_URL=https://calendly.com/clockpilot/demo

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Notification Settings
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_PUSH_ENABLED=true
WEBHOOK_SECRET=

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,csv

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/clockpilot.crt
SSL_KEY_PATH=/etc/ssl/private/clockpilot.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=clockpilot-backups

# Performance
CACHE_TTL=3600
MAX_CONNECTIONS=100
CLUSTER_WORKERS=auto