# =============================================================================
# ClockPilot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# Environment variables are validated with Zod schemas in shared/env.ts

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=5000
# BASE_URL=http://localhost:5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string (REQUIRED)
DATABASE_URL=postgresql://user:password@localhost:5432/clockpilot_dev
DATABASE_POOL_SIZE=20

# Alternative individual database settings (if not using DATABASE_URL)
# PGHOST=localhost
# PGPORT=5432
# PGUSER=clockpilot_user
# PGPASSWORD=your_password
# PGDATABASE=clockpilot_dev

# =============================================================================
# AUTHENTICATION & SECURITY (CRITICAL - Required in Production)
# =============================================================================
# All secrets must be at least 32 characters long in production
# Generate with: openssl rand -base64 32
JWT_SECRET=dev-jwt-secret-32chars-minimum-length
JWT_REFRESH_SECRET=dev-jwt-refresh-secret-32chars-minimum
SESSION_SECRET=dev-session-secret-32chars-minimum-length

# Development only - for seeding database with test users
# SEED_PASSWORD_HASH=$2b$10$example.hash.for.development

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@clockpilot.com

# =============================================================================
# OBJECT STORAGE (Optional - S3 Compatible)
# =============================================================================
# S3_BUCKET=clockpilot-files
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# DEFAULT_OBJECT_STORAGE_BUCKET_ID=bucket-id
# PRIVATE_OBJECT_DIR=.private
# PUBLIC_OBJECT_SEARCH_PATHS=public

# =============================================================================
# REDIS CONFIGURATION (Optional - for sessions and caching)
# =============================================================================
# REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# GOOGLE_ANALYTICS_ID=GA-XXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_GEOLOCATION=false
ENABLE_OFFLINE_MODE=false
ENABLE_PUSH_NOTIFICATIONS=false

# =============================================================================
# EXTERNAL APIS (Optional)
# =============================================================================
# GOOGLE_MAPS_API_KEY=your-google-maps-key
# CALENDLY_URL=https://calendly.com/your-username

# =============================================================================
# NOTIFICATIONS
# =============================================================================
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_PUSH_ENABLED=true
# WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,csv

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SSL CONFIGURATION (Production)
# =============================================================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=clockpilot-backups

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
CACHE_TTL=3600
MAX_CONNECTIONS=100
CLUSTER_WORKERS=auto

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info