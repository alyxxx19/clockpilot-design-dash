# ========================
# CLOCKPILOT - Configuration Environment
# ========================

# ========================
# DATABASE CONFIGURATION
# ========================
# PostgreSQL connection string (format: postgresql://user:password@host:port/database)
DATABASE_URL=postgresql://clockpilot_user:your_secure_password@localhost:5432/clockpilot

# PostgreSQL connection details (used by Drizzle and connection pooling)
PGHOST=localhost
PGPORT=5432
PGUSER=clockpilot_user
PGPASSWORD=your_secure_password
PGDATABASE=clockpilot

# ========================
# APPLICATION CONFIGURATION
# ========================
# Environment: development, staging, production
NODE_ENV=development

# Server port
PORT=5000

# Base URL for the application (used for emails, redirects, etc.)
BASE_URL=http://localhost:5000

# ========================
# SECURITY & AUTHENTICATION
# ========================
# JWT secret key - MUST be changed in production (use a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-64-chars-minimum

# Session secret for Express sessions
SESSION_SECRET=your-session-secret-key-change-in-production

# bcrypt rounds for password hashing (10-12 recommended for production)
BCRYPT_ROUNDS=12

# JWT token expiration times
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# ========================
# CORS CONFIGURATION
# ========================
# Allowed origins for CORS (comma-separated for multiple domains)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ========================
# RATE LIMITING
# ========================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================
# OBJECT STORAGE (Optional)
# ========================
# Object storage configuration for file uploads
DEFAULT_OBJECT_STORAGE_BUCKET_ID=clockpilot-bucket
PRIVATE_OBJECT_DIR=/private
PUBLIC_OBJECT_SEARCH_PATHS=/public

# ========================
# EMAIL CONFIGURATION (Optional)
# ========================
# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=ClockPilot <noreply@clockpilot.com>

# ========================
# MONITORING & LOGGING
# ========================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Sentry DSN for error tracking (production)
SENTRY_DSN=https://your-sentry-dsn-here

# ========================
# REDIS CONFIGURATION (Optional)
# ========================
# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379

# ========================
# WEBHOOK CONFIGURATION (Optional)
# ========================
# Webhook URLs for external integrations
WEBHOOK_SLACK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
WEBHOOK_TEAMS_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# ========================
# BACKUP CONFIGURATION
# ========================
# S3 configuration for database backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-3
AWS_BACKUP_BUCKET=clockpilot-backups

# ========================
# FEATURE FLAGS
# ========================
# Enable/disable features
FEATURE_NOTIFICATIONS=true
FEATURE_EXPORT_PDF=true
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_REPORTING=true

# ========================
# PERFORMANCE CONFIGURATION
# ========================
# Database connection pool size
DATABASE_POOL_SIZE=10

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# ========================
# DEVELOPMENT ONLY
# ========================
# Debug mode (set to false in production)
DEBUG=true

# Enable API documentation in development
ENABLE_API_DOCS=true

# Seed database with demo data
SEED_DEMO_DATA=false

# ========================
# PRODUCTION SECURITY
# ========================
# Force HTTPS in production
FORCE_HTTPS=false

# Secure cookie settings for production
SECURE_COOKIES=false

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ========================
# INTEGRATION APIS (Optional)
# ========================
# External API keys for integrations
PAYROLL_API_KEY=your-payroll-api-key
HR_SYSTEM_API_KEY=your-hr-system-api-key
CALENDAR_API_KEY=your-calendar-api-key

# ========================
# LOCALIZATION
# ========================
# Default language and timezone
DEFAULT_LANGUAGE=fr
DEFAULT_TIMEZONE=Europe/Paris

# ========================
# NOTIFICATIONS
# ========================
# Push notification configuration
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@clockpilot.com